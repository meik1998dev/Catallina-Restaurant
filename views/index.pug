    // MENU
    .menu-section
      h2 Our Meanu
      .menu
        .menu-list
         h3 MAIN MEAL

         each item in menu
           if item.kind==="main-meal"
            .menu-item
                div(class='menu-item__img')
                 img(src='/css/images/tab-item-03.png' alt='')
                div(class='menu-item__inf')
                 h3=item.name
                 p=item.integradiants
                div(class='menu-item__price')
                 h4=item.price

        .menu-list
          h3 SOUPS
          each item in menu
            if item.kind==="soup"
                .menu-item
                    div(class='menu-item__img')
                     img(src='/css/images/tab-item-03.png' alt='')
                    div(class='menu-item__inf')
                     h3=item.name
                     p=item.integradiants
                    div(class='menu-item__price')
                     h4=item.price
        

        .menu-list
          h3 DRINKS
          each item in menu
            if item.kind==="drink"
                .menu-item
                  div(class='menu-item__img')
                    img(src='/css/images/tab-item-03.png' alt='')
                  div(class='menu-item__inf')
                    h3=item.name
                    p=item.integradiants
                  div(class='menu-item__price')
                    h4=item.price

    // TESTIMONIALS
    .test-section
      .test
        h2 Testimonials
        div(class='test__paragraph')
          p
            | “ Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean. ”
        div(class='test__info')
          div(class='test__img')
            img(src='/css/images/about_1.jpg' alt='')
          div(class='test__name')
            h4 Charles White
            p CEO, xyz Company
    // OFFERS
    .offers-section
      h2 Our Offers
      .offer
        div(class='offer__img')
          img(src='/css/images/hero_1.jpg' alt='')
        div(class='offer__info')
          div(class='offer__info--name')
            h3 Stake With Lemon
            h4 Meat / Lemon / Rosemery
            p For Two Person With Free Beer
            button.btn Book Now
          div(class='offer__info--price')
            h4.new-price 22$
